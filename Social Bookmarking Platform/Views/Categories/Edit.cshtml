@model Social_Bookmarking_Platform.Models.Category


@{
    ViewBag.Title = "Editare categorie";
}

<h2>@ViewBag.Title</h2>


<form asp-action="Edit" asp-controller="Categories" asp-route-id="@Model.Id" method="post">

    <div class="form-group">
        <label asp-for="Title" class="form-label">Denumire categorie</label>
        <br />
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <br />

    <button class="btn btn-success" type="submit">Modifica categoria</button>

</form>